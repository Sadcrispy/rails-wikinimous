<div class="container">
  <h2><%= @article.title %></h2>
  <p><%= @article.content %></p>
  <br>
  <%= link_to "Edit this article", edit_article_path, class: "text-decoration-none text-danger" %>
  <br>
  <%= link_to "Back to articles list", articles_path, class: "text-decoration-none text-danger" %>
  <br>
  <%= link_to "Delete",
  article_path(@article),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "text-decoration-none text-danger"
  %>
</div>
